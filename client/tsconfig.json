{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
